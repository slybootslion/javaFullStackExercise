/* pages/search/search.wxss */

page {
  background-color: #ffffff;
}

.header {
  width: 750rpx;
  padding-bottom: 14rpx;
  border-bottom: 2rpx solid #f3f3f3;
  position: fixed;
  z-index: 77;
  top: 0;
  background-color: #ffffff;
}

.header .input {
  border-radius: 0;
}

.container {
  padding-top: 70rpx;
}

.history-container {
  display: flex;
  flex-direction: column;
}

.history-title {
  display: flex;
  align-items: center;
  margin-top: 38rpx;
}

.slide {
  width: 8rpx;
  height: 46rpx;
  background-color: #157658;
  margin-right: 22rpx;
}

.icon {
  margin-right: 30rpx;
}

.history-title>text {
  font-size: 28rpx;
  color: #333333;
}
