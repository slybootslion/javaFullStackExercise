/* pages/category/category.wxss */

page {
  background-color: #ffffff;
}

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.search-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .search-container .search-btn {
  background-color: #f1f1f1;
  color: #c4c9d2;
  font-size: 24rpx;
  font-weight: 400;
  border-radius: 4rpx;
}

.segment-item-active {
  color: #157658 !important;
  font-size: 26rpx;
}

.segment-item {
  color: #666666 !important;
  background-color: #ffffff;
  font-size: 26rpx;
}

.l-seg-line {
  width: 8rpx !important;
  height: 40rpx !important;
  background-color: #157658 !important;
  border-radius: 0 !important;
}

.main {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  border-top: 2rpx solid #f3f3f3;
}

.right {
  width: 588rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-left: 2rpx solid #f3f3f3;
}
