<!-- pages/category/category.wxml -->
<view class="container">
  <view class="search-container">
    <l-button l-class="search-btn" bind:lintap="onGotoSearch" width="710" height="60" icon="research" icon-size="24" icon-color="#c4c9d2" shape="square">
      搜索商品
    </l-button>
  </view>
  <view class="main">
    <l-segment height="{{segHeight}}" item-height="90" active-key="{{defaultRootId}}" even="{{false}}" width="160" l-active-class="segment-item-active" l-inactive-class="segment-item" l-line-class="l-seg-line" placement="left" scrollable>
      <block wx:for="{{roots}}" wx:key="index">
        <l-segment-item key="{{item.id}}" tab="{{item.name}}"></l-segment-item>
      </block>
    </l-segment>
    <view></view>
  </view>
</view>
