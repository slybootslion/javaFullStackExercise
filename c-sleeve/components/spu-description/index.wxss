/* components/spu-description/index.wxss */

.container {
  width: 100%;
  box-sizing: border-box;
  background-color: #ffffff;
  padding: 34rpx 30rpx 26rpx 30rpx;
  display: flex;
  justify-content: space-between;
}

.tags {
  display: flex;
}

.l-tag {
  margin-right: 6rpx !important;
}

.left {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.subtitle {
  color: #999999;
  font-size: 28rpx;
  font-weight: 400;
  margin-top: 40rpx;
  margin-bottom: 16rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
}

.l-price-unit {
  margin-right: 14rpx !important;
}

.discount-price {
  margin-left: 20rpx;
  margin-right: 80rpx;
}

.discount-tag {
  width: 50rpx;
  border-radius: 20rpx !important;
  position: relative !important;
  bottom: 4rpx;
}

.right {
  width: 78rpx;
  height: 120rpx;
  display: flex;
  margin-left: 20rpx;
  flex-direction: row;
  justify-content: flex-end;
  border-left: 2px dashed #f5f5f5;
}

.inner {
  width: 50rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #dcebe6;
}

.inner text {
  font-size: 20rpx;
  color: #157658;
}