/* components/spu-preview/index.wxss */

.container {
  width: 340rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  box-shadow: 0 0 8rpx 0 rgba(221, 221, 221, 0.5);
  margin-bottom: 30rpx;
}

.content-container {
  display: flex;
  flex-direction: column;
  padding: 16rpx 16rpx 22rpx 16rpx;
}

/* .img {
  width: 100%;
  height: 360rpx;
} */

.tags {
  margin: 6rpx 0 8rpx;
  display: flex;
  flex-wrap: wrap;
}

.container .content-container .l-tag {
  background-color: #dcebe6;
  color: #157658;
  height: 36rpx;
  line-height: 36rpx;
  margin-right: 5rpx;
}

.title {
  color: #333;
  font-size: 28rpx;
}

.price-row {
  display: flex;
}

.discount_price {
  margin-left: 20rpx;
}

.subtitle {
  font-size: 24rpx;
  font-weight: 300;
  margin-top: 6rpx;
  color: #888;
}
