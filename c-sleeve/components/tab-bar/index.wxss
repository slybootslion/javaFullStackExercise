/* components/tab-bar/index.wxss */

.sleeve {
  font-family: sleeve !important;
  color: #157658 !important;
}

.container {
  height: 100rpx;
  width: 100%;
  display: flex;
  background-color: #ffffff;
}

.btn-font {
  width: 260rpx;
  height: 100%;
  color: #ffffff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.buy {
  background-color: #157658;
}

.cart {
  background-color: #333333;
}

.icons {
  width: 230rpx;
  height: 100%;
  color: #999999;
  box-sizing: border-box;
  padding-left: 16rpx;
  padding-right: 22rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.icons > view {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icons > view.t8 {
  padding-top: 4rpx;
}

.icons text {
  font-size: 20rpx;
}
