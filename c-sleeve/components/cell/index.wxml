<!--components/cell/index.wxml-->
<view bindtap="onTap" class="container {{c(cell.status).outer}}">
  <view class="inner-container {{c(cell.status).inner}}">
    <text>{{cell.title}}</text>
  </view>
</view>

<wxs module="c">
  function statusStyle(status) {
    if (status === 'forbidden') {
      return {
        outer: 'forbidden',
        inner: ''
      }
    }

    if (status === 'selected') {
      return {
        outer: 's-outer',
        inner: 's-inner'
      }
    }
  }

  module.exports = statusStyle
</wxs>