/* components/realm/index.wxss */

.container {
  max-height: 1200rpx;
  min-height: 700rpx;
  background-color: #fff;
  box-sizing: border-box;
  margin-bottom: 100rpx;
}

.inner-container {
  padding: 30rpx 30rpx 0 30rpx;
}

.sku-preview {
  display: flex;
}

.sku-img {
  width: 160rpx;
  height: 160rpx;
}

.sku-description {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 40rpx;
}

.discount-price {
  margin-left: 20rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
}

.sku-pending {
  font-size: 20rpx;
}

.sku-pending > text:first-child {
  color: #999999;
}

.sku-pending > text:nth-child(2) {
  color: #666666;
}

.hr {
  width: 690rpx;
  height: 2rpx;
  background-color: #e9e9e9;
  margin-top: 30rpx;
}

.stock {
  margin-left: 30rpx;
  font-size: 20rpx;
  color: #999;
}

.stock-pinch {
  margin-left: 30rpx;
  font-size: 20rpx;
  color: #d20109;
}
.counter-container {
  margin-top: 34rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 200rpx;
}

.counter-container .text {
  color: #555555;
  font-size: 24rpx;
}

.bottom-btn {
  width: 100%;
  height: 100rpx;
  background-color: #333333;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 0;
}

.out-stock {
  background-color: #dcebe6;
}

.bottom-btn text {
  color: #ffffff;
}
