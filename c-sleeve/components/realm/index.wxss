/* components/realm/index.wxss */

.container {
  padding: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.sku-preview {
  display: flex;
}

.sku-img {
  width: 160rpx;
  height: 160rpx;
}

.sku-description {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 40rpx;
}

.discount-price {
  margin-left: 20rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
}

.sku-pending {
  font-size: 20rpx;
}

.sku-pending > text:first-child {
  color: #999999;
}

.sku-pending > text:nth-child(2) {
  color: #666666;
}

.hr {
  width: 690rpx;
  height: 2rpx;
  background-color: #e9e9e9;
  margin-top: 30rpx;
}

.stock {
  margin-left: 30rpx;
  font-size: 20rpx;
  color: #999;
}

.stock-pinch {
  margin-left: 30rpx;
  font-size: 20rpx;
  color: #d20109;
}
