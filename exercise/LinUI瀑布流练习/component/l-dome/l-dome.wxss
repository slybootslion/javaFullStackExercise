/* component/l-dome/l-dome.wxss */

.life-container {
  width: 350rpx !important;
  padding: 0 0 20rpx 0 !important;
  background-color: #ffffff !important;
  box-shadow: 0px 4rpx 12rpx 0px rgba(9, 36, 66, 0.12) !important;
  overflow: hidden;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}

.life-img {
  width: 0;
  height: 0;
}

.pic{
  width: 350rpx;
  display: block;
}

.life-product-contianer {
  padding: 0 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.life-title {
  width: 100%;
  margin-left: 10rpx !important;
}

.tag {
  width: 100%;
  display: flex;
}

.tag .tag-item {
  font-size: 20rpx;
  color: #ad0e11;
  padding: 5rpx 20rpx;
  background-color: #ffcbcc;
  margin: 10rpx 10rpx 10rpx 0;
}

.art-content {
  font-size: 24rpx;
  line-height: 1.5;
  color: #999;
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.price{
  margin-right: 20rpx;
}

.price-container{
  width: 100%;
  margin-top: 15rpx;
}