    <view class="tag" wx:if="{{tags.length > 0}}">
      <view class="tag-item" wx:for="{{tags}}">{{item}}</view>
    </view>
    <view class='price-container'>
      <l-price unit="ï¿¥" class="price" value="{{data.price}}" value-color="#ad0e11" unit-color="#ad0e11" value-size="36"></l-price>
      <l-price wx:if="{{data.discount_price}}" size="14rpx" l-class="del-price" unit="ï¿¥" value="{{data.discount_price}}" value-color="#ad0e11" unit-color="#ad0e11" deleted del-color="#888" value-color="#888" unit-color="#888"></l-price>
